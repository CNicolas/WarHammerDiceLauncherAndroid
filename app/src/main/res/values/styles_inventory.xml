<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ItemEditFieldLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:weightSum">4</item>
    </style>

    <style name="ItemEditFieldsHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="ItemEditFieldLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:textColor">@color/characteristic_text</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="InventoryNumberEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/zero</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">2</item>
        <item name="android:textColor">@color/characteristic_text</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ItemEditSpinner">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="ItemChildValueWithImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">@dimen/very_small_padding</item>
        <item name="android:layout_marginStart">@dimen/medium_padding</item>
        <item name="android:layout_marginEnd">@dimen/medium_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|start</item>
        <item name="android:hint">@string/zero</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
    </style>

    <style name="ItemDialogLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">7</item>
    </style>

    <style name="ItemDialogTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="ItemDialogTextView.Label" parent="ItemDialogTextView">
        <item name="android:layout_weight">4</item>
        <item name="android:gravity">center|end</item>
        <item name="android:layout_marginStart">@dimen/big_padding</item>
    </style>

    <style name="ItemDialogTextView.Field" parent="ItemDialogTextView">
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center|start</item>
        <item name="android:hint">@string/zero</item>
    </style>
</resources>