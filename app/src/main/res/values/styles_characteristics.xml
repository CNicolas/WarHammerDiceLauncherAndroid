<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--LinearLayout-->
    <style name="CharacteristicLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
        <item name="android:weightSum">6</item>
    </style>

    <style name="CharacteristicBlueLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@color/characteristic_blue</item>
        <item name="android:layout_margin">@dimen/very_small_padding</item>
    </style>

    <style name="CharacteristicWhiteLinearLayout" parent="CharacteristicBlueLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_weight">1.1</item>
    </style>
    <!--End LinearLayout-->

    <!--Labels-->
    <style name="LabelTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
    </style>

    <style name="CharacteristicLabel" parent="LabelTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="PlayerSimpleLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
    </style>
    <!--End Labels-->

    <!--EditTexts-->
    <style name="CharacteristicNumberEditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/zero</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">2</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DeactivableCharacteristicText" parent="@android:style/Widget.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:textColor">@color/characteristic_text</item>
    </style>

    <style name="CharacteristicFortuneNumberEditText" parent="CharacteristicNumberEditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/characteristics_fortune_border</item>
        <item name="android:layout_marginStart">@dimen/very_small_padding</item>
        <item name="android:layout_marginTop">@dimen/very_small_padding</item>
        <item name="android:layout_marginBottom">@dimen/very_small_padding</item>
    </style>

    <style name="SimpleCharacteristicNumberEditText" parent="DeactivableCharacteristicText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:hint">@string/zero</item>
        <item name="android:inputType">number</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:maxLength">2</item>
    </style>
    <!--End EditTexts-->
</resources>