<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:weightSum">5</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="SearchLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center|end</item>
        <item name="android:hint">@string/dummy_string</item>
    </style>

    <style name="SearchField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="SearchTextField"
        parent="SearchField">
        <item name="android:inputType">text|textShortMessage</item>
        <item name="android:lines">1</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>