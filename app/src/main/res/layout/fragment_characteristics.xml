<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/characteristics_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:isScrollContainer="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_padding"
            android:layout_marginEnd="@dimen/big_padding"
            android:layout_marginStart="@dimen/big_padding"
            android:layout_marginTop="@dimen/medium_padding"
            android:orientation="vertical">

            <!--Name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/LabelTextView"
                    android:layout_weight="75"
                    android:text="@string/name_label" />

                <EditText
                    android:id="@+id/player_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:hint="@string/name_hint"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <!--Career-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/LabelTextView"
                    android:layout_weight="75"
                    android:text="@string/career_label" />

                <EditText
                    android:id="@+id/player_career"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:hint="@string/career_hint"
                    android:inputType="textPersonName" />
            </LinearLayout>
        </LinearLayout>

        <!--Characteristics EditTexts-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Strength-->
            <LinearLayout
                android:id="@+id/strength_layout"
                style="@style/CharacteristicLinearLayout">

                <TextView
                    style="@style/CharacteristicLabelTextView"
                    android:text="@string/strength" />

                <LinearLayout style="@style/CharacteristicBlueLinearLayout">

                    <EditText
                        android:id="@+id/strength_characteristic"
                        style="@style/CharacteristicEditText" />
                </LinearLayout>

                <LinearLayout style="@style/CharacteristicWhiteLinearLayout">

                    <EditText
                        android:id="@+id/strength_fortune"
                        style="@style/CharacteristicFortuneEditText" />
                </LinearLayout>
            </LinearLayout>

            <!--Toughness-->
            <LinearLayout
                android:id="@+id/toughness_layout"
                style="@style/CharacteristicLinearLayout"
                android:layout_below="@id/strength_layout">

                <TextView
                    style="@style/CharacteristicLabelTextView"
                    android:text="@string/toughness" />

                <LinearLayout style="@style/CharacteristicBlueLinearLayout">

                    <EditText
                        android:id="@+id/toughness_characteristic"
                        style="@style/CharacteristicEditText" />
                </LinearLayout>

                <LinearLayout style="@style/CharacteristicWhiteLinearLayout">

                    <EditText
                        android:id="@+id/toughness_fortune"
                        style="@style/CharacteristicFortuneEditText" />
                </LinearLayout>
            </LinearLayout>

            <!--Agility-->
            <LinearLayout
                android:id="@+id/agility_layout"
                style="@style/CharacteristicLinearLayout"
                android:layout_below="@id/toughness_layout">

                <TextView
                    style="@style/CharacteristicLabelTextView"
                    android:text="@string/agility" />

                <LinearLayout style="@style/CharacteristicBlueLinearLayout">

                    <EditText
                        android:id="@+id/agility_characteristic"
                        style="@style/CharacteristicEditText" />
                </LinearLayout>

                <LinearLayout style="@style/CharacteristicWhiteLinearLayout">

                    <EditText
                        android:id="@+id/agility_fortune"
                        style="@style/CharacteristicFortuneEditText" />
                </LinearLayout>
            </LinearLayout>

            <!--Intelligence-->
            <LinearLayout
                android:id="@+id/intelligence_layout"
                style="@style/CharacteristicLinearLayout"
                android:layout_below="@id/agility_layout">

                <TextView
                    android:id="@+id/textView"
                    style="@style/CharacteristicLabelTextView"
                    android:text="@string/intelligence" />

                <LinearLayout style="@style/CharacteristicBlueLinearLayout">

                    <EditText
                        android:id="@+id/intelligence_characteristic"
                        style="@style/CharacteristicEditText" />
                </LinearLayout>

                <LinearLayout style="@style/CharacteristicWhiteLinearLayout">

                    <EditText
                        android:id="@+id/intelligence_fortune"
                        style="@style/CharacteristicFortuneEditText" />
                </LinearLayout>
            </LinearLayout>

            <!--Will Power-->
            <LinearLayout
                android:id="@+id/willpower_layout"
                style="@style/CharacteristicLinearLayout"
                android:layout_below="@id/intelligence_layout">

                <TextView
                    style="@style/CharacteristicLabelTextView"
                    android:text="@string/willpower" />

                <LinearLayout style="@style/CharacteristicBlueLinearLayout">

                    <EditText
                        android:id="@+id/willpower_characteristic"
                        style="@style/CharacteristicEditText" />
                </LinearLayout>

                <LinearLayout style="@style/CharacteristicWhiteLinearLayout">

                    <EditText
                        android:id="@+id/willpower_fortune"
                        style="@style/CharacteristicFortuneEditText" />
                </LinearLayout>
            </LinearLayout>

            <!--Fellowship-->
            <LinearLayout
                android:id="@+id/fellowship_layout"
                style="@style/CharacteristicLinearLayout"
                android:layout_below="@id/willpower_layout">

                <TextView
                    style="@style/CharacteristicLabelTextView"
                    android:text="@string/fellowship" />

                <LinearLayout style="@style/CharacteristicBlueLinearLayout">

                    <EditText
                        android:id="@+id/fellowship_characteristic"
                        style="@style/CharacteristicEditText" />
                </LinearLayout>

                <LinearLayout style="@style/CharacteristicWhiteLinearLayout">

                    <EditText
                        android:id="@+id/fellowship_fortune"
                        style="@style/CharacteristicFortuneEditText" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <!--Rank, Experience/Max_Experience-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!--Rank-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.66">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="@dimen/medium_padding"
                    android:paddingStart="@dimen/medium_padding"
                    android:text="@string/rank_label"
                    android:textSize="@dimen/textSize" />

                <EditText
                    android:id="@+id/player_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/medium_padding"
                    android:paddingStart="@dimen/medium_padding" />
            </LinearLayout>

            <!--Experience-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/experience_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:paddingEnd="@dimen/medium_padding"
                    android:paddingStart="@dimen/medium_padding"
                    android:text="@string/experience_label" />

                <EditText
                    android:id="@+id/player_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/experience_label"
                    android:gravity="end"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/medium_padding"
                    android:paddingStart="@dimen/medium_padding" />

                <!--/-->
                <TextView
                    android:id="@+id/experience_label_separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/player_experience"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="@string/slash" />

                <!--Max Experience-->
                <EditText
                    android:id="@+id/player_max_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/experience_label_separator"
                    android:gravity="start"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/medium_padding"
                    android:paddingStart="@dimen/medium_padding" />
            </RelativeLayout>

        </LinearLayout>

        <!--Race, Age, Size-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="@dimen/small_padding">

            <!--Race-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="@dimen/medium_padding"
                    android:paddingStart="@dimen/medium_padding"
                    android:text="@string/race_label"
                    android:textSize="@dimen/textSize" />

                <EditText
                    android:id="@+id/player_race"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="@string/race_hint"
                    android:inputType="textPersonName" />
            </LinearLayout>


            <!--Age-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="@dimen/medium_padding"
                    android:paddingStart="@dimen/medium_padding"
                    android:text="@string/age_label"
                    android:textSize="@dimen/textSize" />

                <EditText
                    android:id="@+id/player_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:maxLength="3" />
            </LinearLayout>


            <!--Size-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="@dimen/medium_padding"
                    android:paddingStart="@dimen/medium_padding"
                    android:text="@string/size_label"
                    android:textSize="@dimen/textSize" />

                <EditText
                    android:id="@+id/player_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:inputType="numberDecimal"
                    android:maxLength="5" />
            </LinearLayout>
        </LinearLayout>

        <!--Description-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingEnd="@dimen/medium_padding"
                android:paddingStart="@dimen/medium_padding"
                android:text="@string/description_label"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/player_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:inputType="textShortMessage"
                android:maxLines="3"
                android:padding="@dimen/small_padding"
                android:scrollHorizontally="false" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>