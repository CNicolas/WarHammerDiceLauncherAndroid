<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/characteristics_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:isScrollContainer="true"
        android:orientation="vertical">

        <!--Name-->
        <EditText
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Name"
            android:inputType="textPersonName" />

        <!--Characteristics wheels-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Strength-->
            <LinearLayout
                android:id="@+id/strength_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.40"
                    android:gravity="end"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/strength" />

                <EditText
                    android:id="@+id/strength_characteristic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/strength_fortune"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:maxLength="2" />
            </LinearLayout>

            <!--Toughness-->
            <LinearLayout
                android:id="@+id/toughness_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/strength_layout"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.40"
                    android:gravity="end"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/toughness" />

                <EditText
                    android:id="@+id/toughness_characteristic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/toughness_fortune"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:maxLength="2" />
            </LinearLayout>

            <!--Agility-->
            <LinearLayout
                android:id="@+id/agility_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toughness_layout"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.40"
                    android:gravity="end"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/agility" />

                <EditText
                    android:id="@+id/agility_characteristic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/agility_fortune"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:maxLength="2" />
            </LinearLayout>

            <!--Intelligence-->
            <LinearLayout
                android:id="@+id/intelligence_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/agility_layout"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.40"
                    android:gravity="end"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/intelligence" />

                <EditText
                    android:id="@+id/intelligence_characteristic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/intelligence_fortune"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:maxLength="2" />
            </LinearLayout>

            <!--Will Power-->
            <LinearLayout
                android:id="@+id/willpower_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/intelligence_layout"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.40"
                    android:gravity="end"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/willpower" />

                <EditText
                    android:id="@+id/willpower_characteristic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/willpower_fortune"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:maxLength="2" />
            </LinearLayout>

            <!--Fellowship-->
            <LinearLayout
                android:id="@+id/fellowship_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/willpower_layout"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.40"
                    android:gravity="end"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/fellowship" />

                <EditText
                    android:id="@+id/fellowship_characteristic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:maxLength="2" />

                <EditText
                    android:id="@+id/fellowship_fortune"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:gravity="center"
                    android:hint="@string/zero"
                    android:inputType="number"
                    android:maxLength="2" />
            </LinearLayout>

        </RelativeLayout>

        <!--Race, Age, Size-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <!--Race-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:hint="Race :" />

                <EditText
                    android:id="@+id/player_race"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:inputType="textPersonName" />
            </LinearLayout>


            <!--Age-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:hint="Age :" />

                <EditText
                    android:id="@+id/player_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="3" />
            </LinearLayout>


            <!--Size-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:hint="Size :" />

                <EditText
                    android:id="@+id/player_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:maxLength="5" />
            </LinearLayout>
        </LinearLayout>

        <!--Description-->
        <EditText
            android:id="@+id/player_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="Description"
            android:inputType="textShortMessage"
            android:maxLines="3"
            android:minHeight="75dp"
            android:padding="5dp"
            android:scrollHorizontally="false" />

        <!--Rank, Experience/Max_Experience-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Rank-->
            <EditText
                android:id="@+id/player_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="Rank"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1" />

            <!--Experience-->
            <EditText
                android:id="@+id/player_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.1"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:hint="Experience"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="/"
                android:textAlignment="center" />

            <!--Experience-->
            <EditText
                android:id="@+id/player_max_experience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="left"
                android:hint="Total"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>