<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/medium_padding"
            android:layout_marginStart="@dimen/medium_padding"
            android:layout_weight="50"
            android:gravity="end|center_vertical"
            android:text="@string/wounds_label" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/medium_padding"
            android:layout_marginStart="@dimen/medium_padding"
            android:layout_weight="50"
            android:hint="@string/zero" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/medium_padding"
            android:layout_marginStart="@dimen/medium_padding"
            android:layout_weight="50"
            android:gravity="end|center_vertical"
            android:text="@string/corruption_label" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/medium_padding"
            android:layout_marginStart="@dimen/medium_padding"
            android:layout_weight="50"
            android:hint="@string/zero" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/medium_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium_padding"
            android:layout_marginStart="@dimen/medium_padding"
            android:gravity="center"
            android:text="@string/stance_label" />

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/player_stance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dsb_max="6"
            app:dsb_min="-6"
            app:dsb_progressColor="@color/colorPrimaryDark"
            app:dsb_scrubberHeight="5dp"
            app:dsb_thumbSize="20dp"
            app:dsb_value="0" />

    </LinearLayout>

</LinearLayout>