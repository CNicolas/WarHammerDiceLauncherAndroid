<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/very_small_padding"
    android:paddingLeft="@dimen/medium_padding"
    android:paddingRight="@dimen/medium_padding"
    android:paddingTop="@dimen/very_small_padding">

    <TextView
        android:id="@+id/inventoryGroupName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="90"
        android:gravity="center_vertical"
        android:text="@string/dummy_string"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize" />

    <ImageView
        android:id="@+id/inventoryGroupArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="10"
        android:rotation="90"
        android:src="@drawable/ic_keyboard_arrow_down_white" />

</LinearLayout>