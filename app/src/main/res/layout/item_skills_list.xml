<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_skills_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_skills_list_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:paddingEnd="@dimen/medium_padding"
        android:paddingStart="@dimen/medium_padding"
        android:textSize="@dimen/textSize" />

    <CheckBox
        android:id="@+id/item_skills_list_level1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="checkSkillLevel"
        android:tag="1" />

    <CheckBox
        android:id="@+id/item_skills_list_level2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="checkSkillLevel"
        android:tag="2" />

    <CheckBox
        android:id="@+id/item_skills_list_level3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="checkSkillLevel"
        android:tag="3" />


</LinearLayout>