<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="player"
            type="com.whfrp3.model.player.Player" />

        <variable
            name="skill"
            type="com.whfrp3.model.player.Skill" />

        <variable
            name="handlers"
            type="com.whfrp3.ihm.listeners.SkillHandlers" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            style="@style/SkillName"
            android:onClick="@{() -> handlers.startLaunchActivity(skill)}"
            android:text="@{skill.name}" />

        <CheckBox
            android:id="@+id/skill_level1"
            style="@style/SkillCheckbox"
            android:checked="@{skill.level >= 1}"
            android:enabled="@{player.inEdition}"
            android:onClick="@{() -> handlers.onLevelSelected(skill, 1, skillLevel1, skillLevel2, skillLevel3)}"
            android:tag="1" />

        <CheckBox
            android:id="@+id/skill_level2"
            style="@style/SkillCheckbox"
            android:checked="@{skill.level >= 2}"
            android:enabled="@{player.inEdition}"
            android:onClick="@{() -> handlers.onLevelSelected(skill, 2, skillLevel1, skillLevel2, skillLevel3)}"
            android:tag="2" />

        <CheckBox
            android:id="@+id/skill_level3"
            style="@style/SkillCheckbox"
            android:checked="@{skill.level >= 3}"
            android:enabled="@{player.inEdition}"
            android:onClick="@{() -> handlers.onLevelSelected(skill, 3, skillLevel1, skillLevel2, skillLevel3)}"
            android:tag="3" />
    </LinearLayout>
</layout>
