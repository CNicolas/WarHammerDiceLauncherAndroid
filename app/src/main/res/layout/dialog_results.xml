<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/successNumberResults"
            style="@style/ResultDialogImagedTextView"
            android:drawableTop="@drawable/ic_success_black" />

        <TextView
            android:id="@+id/benefitNumberResults"
            style="@style/ResultDialogImagedTextView"
            android:drawableTop="@drawable/ic_boon_black" />

        <TextView
            android:id="@+id/mischiefNumberResults"
            style="@style/ResultDialogImagedTextView"
            android:drawableTop="@drawable/ic_bane_black" />

        <TextView
            android:id="@+id/failureNumberResults"
            style="@style/ResultDialogImagedTextView"
            android:drawableTop="@drawable/ic_failure_black" />

        <TextView
            android:id="@+id/sigmarNumberResults"
            style="@style/ResultDialogImagedTextView"
            android:drawableTop="@drawable/ic_sigmar_black" />

        <TextView
            android:id="@+id/tirednessNumberResults"
            style="@style/ResultDialogImagedTextView"
            android:drawableTop="@drawable/ic_exertion_black" />

        <TextView
            android:id="@+id/delayNumberResults"
            style="@style/ResultDialogImagedTextView"
            android:drawableTop="@drawable/ic_delay_black" />


        <TextView
            android:id="@+id/chaosNumberResults"
            style="@style/ResultDialogImagedTextView"
            android:drawableTop="@drawable/ic_chaos_black" />
    </LinearLayout>

    <Button
        android:id="@+id/dismissResultsPopupButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/close" />

</LinearLayout>
