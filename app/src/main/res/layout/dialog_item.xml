<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="com.whfrp3.tools.BindingUtils" />

        <import type="com.whfrp3.model.enums.ItemType" />

        <import type="com.whfrp3.model.enums.ItemQuality" />

        <import type="com.whfrp3.model.item.Weapon" />

        <import type="com.whfrp3.model.item.Armor" />

        <import type="com.whfrp3.model.item.UsableItem" />

        <variable
            name="item"
            type="com.whfrp3.model.player.PlayerItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/medium_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/medium_padding"
            android:padding="@dimen/very_small_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{item.item.description}"
                android:textSize="@dimen/medium_text_size" />

        </LinearLayout>

        <LinearLayout style="@style/ItemDialogLine">

            <TextView
                style="@style/ItemDialogTextView.Label"
                android:text="@{BindingUtils.labelWithColon(@string/quantity)}" />

            <TextView
                style="@style/ItemDialogTextView.Field"
                android:text="@{item.quantity}" />

        </LinearLayout>

        <LinearLayout style="@style/ItemDialogLine">

            <TextView
                style="@style/ItemDialogTextView.Label"
                android:text="@{BindingUtils.labelWithColon(@string/quality)}" />

            <TextView
                style="@style/ItemDialogTextView.Field"
                android:hint="@string/dummy_string"
                android:text="@{BindingUtils.string(item.quality.labelId)}"
                android:textColor="@{BindingUtils.color(item.quality.colorId)}"
                android:typeface="@{item.quality == ItemQuality.SUPERIOR || item.quality == ItemQuality.MAGIC ? &quot;bold&quot; : &quot;normal&quot;}" />

        </LinearLayout>

        <LinearLayout style="@style/ItemDialogLine">

            <TextView
                style="@style/ItemDialogTextView.Label"
                android:text="@{BindingUtils.labelDrawableWithColon(@string/encumbrance, @drawable/ic_weight_black_16)}" />

            <TextView
                style="@style/ItemDialogTextView.Field"
                android:text="@{item.item.encumbrance}" />

        </LinearLayout>

        <LinearLayout
            style="@style/ItemDialogLine"
            android:layout_marginTop="@dimen/medium_padding"
            android:visibility="@{item.item.type == ItemType.WEAPON ? View.VISIBLE : View.GONE}">

            <TextView
                style="@style/ItemDialogTextView.Label"
                android:text="@{BindingUtils.labelDrawableWithColon(@string/weapon_damage, @drawable/ic_damage_black_16)}" />

            <TextView
                style="@style/ItemDialogTextView.Field"
                android:text="@{item.item.type == ItemType.WEAPON ? ((Weapon) item.item).damage : 0}" />

        </LinearLayout>

        <LinearLayout
            style="@style/ItemDialogLine"
            android:visibility="@{item.item.type == ItemType.WEAPON ? View.VISIBLE : View.GONE}">

            <TextView
                style="@style/ItemDialogTextView.Label"
                android:text="@{BindingUtils.labelDrawableWithColon(@string/weapon_critical_level, @drawable/ic_boon_black_16)}" />

            <TextView
                style="@style/ItemDialogTextView.Field"
                android:text="@{item.item.type == ItemType.WEAPON ? ((Weapon) item.item).criticalLevel : 0}" />

        </LinearLayout>

        <LinearLayout
            style="@style/ItemDialogLine"
            android:visibility="@{item.item.type == ItemType.WEAPON ? View.VISIBLE : View.GONE}">

            <TextView
                style="@style/ItemDialogTextView.Label"
                android:text="@{BindingUtils.labelDrawableWithColon(@string/weapon_range, @drawable/ic_target_black_16)}" />

            <TextView
                style="@style/ItemDialogTextView.Field"
                android:text="@{item.item.type == ItemType.WEAPON ? BindingUtils.string(((Weapon) item.item).range.labelId) : &quot;&quot;}" />

        </LinearLayout>

        <LinearLayout
            style="@style/ItemDialogLine"
            android:layout_marginTop="@dimen/big_padding"
            android:visibility="@{item.item.type == ItemType.ARMOR ? View.VISIBLE : View.GONE}">

            <TextView
                style="@style/ItemDialogTextView.Label"
                android:text="@{BindingUtils.labelDrawableWithColon(@string/armor_defense, @drawable/ic_shield_black_16)}" />

            <TextView
                style="@style/ItemDialogTextView.Field"
                android:text="@{item.item.type == ItemType.ARMOR ? ((Armor) item.item).defense : 0}" />

        </LinearLayout>

        <LinearLayout
            style="@style/ItemDialogLine"
            android:visibility="@{item.item.type == ItemType.ARMOR ? View.VISIBLE : View.GONE}">

            <TextView
                style="@style/ItemDialogTextView.Label"
                android:text="@{BindingUtils.labelDrawableWithColon(@string/armor_soak, @drawable/ic_armor_black_16)}" />

            <TextView
                style="@style/ItemDialogTextView.Field"
                android:text="@{item.item.type == ItemType.ARMOR ? ((Armor) item.item).soak : 0}" />

        </LinearLayout>

        <LinearLayout
            style="@style/ItemDialogLine"
            android:layout_marginTop="@dimen/big_padding"
            android:visibility="@{item.item.type == ItemType.USABLE_ITEM ? View.VISIBLE : View.GONE}">

            <TextView
                style="@style/ItemDialogTextView.Label"
                android:text="@{BindingUtils.labelDrawableWithColon(@string/usable_item_load, @drawable/ic_loads_black_16)}" />

            <TextView
                style="@style/ItemDialogTextView.Field"
                android:text="@{item.item.type == ItemType.USABLE_ITEM ? ((UsableItem) item.item).load : 0}" />

        </LinearLayout>
    </LinearLayout>
</layout>