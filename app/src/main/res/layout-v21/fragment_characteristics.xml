<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.InputType" />

        <variable
            name="player"
            type="com.whfrp3.model.player.Player" />

        <variable
            name="carac"
            type="com.whfrp3.model.player.Characteristics" />

        <variable
            name="bindingContext"
            type="com.whfrp3.tools.BindingContext" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:fillViewport="true"
        android:padding="@dimen/small_padding">

        <!--Only child of ScrollView-->
        <LinearLayout
            android:id="@+id/characteristics_fragment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Has the focus when fragment appears-->
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true"
                tools:ignore="UselessLeaf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/big_padding"
                android:layout_marginStart="@dimen/big_padding"
                android:gravity="center_horizontal">

                <TextView
                    style="@style/PlayerSimpleLabel"
                    android:labelFor="@+id/player_name"
                    android:text="@string/name_label" />

                <EditText
                    android:id="@+id/player_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="@{bindingContext.inEdition}"
                    android:focusable="@{bindingContext.inEdition}"
                    android:focusableInTouchMode="@{bindingContext.inEdition}"
                    android:gravity="center"
                    android:hint="@string/name_hint"
                    android:inputType="text"
                    android:text="@={player.name}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/big_padding"
                android:layout_marginStart="@dimen/big_padding"
                android:baselineAligned="false"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/PlayerSimpleLabel"
                        android:labelFor="@+id/player_career"
                        android:text="@string/career_label" />

                    <EditText
                        android:id="@+id/player_career"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="@{bindingContext.inEdition}"
                        android:focusable="@{bindingContext.inEdition}"
                        android:focusableInTouchMode="@{bindingContext.inEdition}"
                        android:gravity="center"
                        android:hint="@string/career_hint"
                        android:inputType="text"
                        android:text="@={player.career}" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/PlayerSimpleLabel"
                        android:labelFor="@+id/player_race"
                        android:text="@string/race_label" />

                    <EditText
                        android:id="@+id/player_race"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="@{bindingContext.inEdition}"
                        android:focusable="@{bindingContext.inEdition}"
                        android:focusableInTouchMode="@{bindingContext.inEdition}"
                        android:gravity="center"
                        android:hint="@string/race_hint"
                        android:inputType="text"
                        android:text="@={player.career}" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <!--Rank-->
                <TextView
                    style="@style/PlayerSimpleLabel"
                    android:labelFor="@+id/player_rank"
                    android:text="@string/rank_label" />

                <EditText
                    android:id="@+id/player_rank"
                    style="@style/SimpleCharacteristicNumberEditText"
                    android:layout_marginEnd="@dimen/big_padding"
                    android:clickable="@{bindingContext.inEdition}"
                    android:focusable="@{bindingContext.inEdition}"
                    android:focusableInTouchMode="@{bindingContext.inEdition}"
                    android:text="@={player.rank}" />

                <!--Age-->
                <TextView
                    style="@style/PlayerSimpleLabel"
                    android:labelFor="@+id/player_age"
                    android:text="@string/age_label" />

                <EditText
                    android:id="@+id/player_age"
                    style="@style/SimpleCharacteristicNumberEditText"
                    android:layout_marginEnd="@dimen/big_padding"
                    android:clickable="@{bindingContext.inEdition}"
                    android:focusable="@{bindingContext.inEdition}"
                    android:focusableInTouchMode="@{bindingContext.inEdition}"
                    android:maxLength="3"
                    android:text="@={player.age}" />

                <!--Size-->
                <TextView
                    style="@style/PlayerSimpleLabel"
                    android:labelFor="@+id/player_size"
                    android:text="@string/size_label" />

                <EditText
                    android:id="@+id/player_size"
                    style="@style/SimpleCharacteristicNumberEditText"
                    android:clickable="@{bindingContext.inEdition}"
                    android:focusable="@{bindingContext.inEdition}"
                    android:focusableInTouchMode="@{bindingContext.inEdition}"
                    android:maxLength="3"
                    android:text="@={player.size}" />
            </LinearLayout>


            <!--Characteristics EditTexts-->
            <include
                android:id="@+id/characteristics_edittexts"
                layout="@layout/characteristics_numbers" />

            <!--Max Wounds-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    style="@style/PlayerSimpleLabel"
                    android:layout_weight="100"
                    android:labelFor="@+id/player_max_wounds"
                    android:text="@string/max_wounds_label" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="111"
                    android:gravity="start|center_horizontal">

                    <EditText
                        android:id="@+id/player_max_wounds"
                        style="@style/SimpleCharacteristicNumberEditText"
                        android:clickable="@{bindingContext.inEdition}"
                        android:focusable="@{bindingContext.inEdition}"
                        android:focusableInTouchMode="@{bindingContext.inEdition}"
                        android:text="@={player.max_wounds}" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/big_padding"
                        android:src="@drawable/ic_bandages" />
                </LinearLayout>
            </LinearLayout>

            <!--Max Experience-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    style="@style/PlayerSimpleLabel"
                    android:layout_weight="100"
                    android:labelFor="@+id/player_max_experience"
                    android:text="@string/max_experience_label" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="115"
                    android:gravity="start|center_horizontal">

                    <EditText
                        android:id="@+id/player_max_experience"
                        style="@style/SimpleCharacteristicNumberEditText"
                        android:clickable="@{bindingContext.inEdition}"
                        android:focusable="@{bindingContext.inEdition}"
                        android:focusableInTouchMode="@{bindingContext.inEdition}"
                        android:text="@={player.max_experience}" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/big_padding"
                        android:src="@drawable/ic_level_up" />
                </LinearLayout>
            </LinearLayout>

            <!--Max Corruption-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    style="@style/PlayerSimpleLabel"
                    android:layout_weight="100"
                    android:labelFor="@+id/player_max_corruption"
                    android:text="@string/max_corruption_label" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="130"
                    android:gravity="start|center_horizontal">

                    <EditText
                        android:id="@+id/player_max_corruption"
                        style="@style/SimpleCharacteristicNumberEditText"
                        android:clickable="@{bindingContext.inEdition}"
                        android:focusable="@{bindingContext.inEdition}"
                        android:focusableInTouchMode="@{bindingContext.inEdition}"
                        android:text="@={player.max_corruption}" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/big_padding"
                        android:src="@drawable/chaos_black" />
                </LinearLayout>
            </LinearLayout>

            <!--Reckless/Max_Reckless, Conservative/Max_Conservative-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_padding"
                android:layout_marginEnd="@dimen/big_padding"
                android:layout_marginStart="@dimen/big_padding"
                android:layout_marginTop="@dimen/medium_padding"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <!--Conservative-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/medium_padding"
                    android:layout_weight="1"
                    android:background="@color/conservative">

                    <TextView
                        style="@style/PlayerSimpleLabel"
                        android:layout_height="match_parent"
                        android:labelFor="@+id/player_max_conservative"
                        android:text="@string/conservative_label"
                        android:textColor="@android:color/white" />


                    <EditText
                        android:id="@+id/player_max_conservative"
                        style="@style/RankExperienceEditText"
                        android:clickable="@{bindingContext.inEdition}"
                        android:focusable="@{bindingContext.inEdition}"
                        android:focusableInTouchMode="@{bindingContext.inEdition}"
                        android:gravity="center"
                        android:maxLength="1"
                        android:text="@={player.max_conservative}"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!--Reckless-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/medium_padding"
                    android:layout_weight="1"
                    android:background="@color/reckless">

                    <TextView
                        style="@style/PlayerSimpleLabel"
                        android:layout_height="match_parent"
                        android:labelFor="@+id/player_max_reckless"
                        android:text="@string/reckless_label"
                        android:textColor="@android:color/white" />

                    <EditText
                        android:id="@+id/player_max_reckless"
                        style="@style/RankExperienceEditText"
                        android:clickable="@{bindingContext.inEdition}"
                        android:focusable="@{bindingContext.inEdition}"
                        android:focusableInTouchMode="@{bindingContext.inEdition}"
                        android:gravity="center"
                        android:maxLength="1"
                        android:text="@={player.max_reckless}"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </LinearLayout>

            <!--Description-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="70dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:labelFor="@+id/player_description"
                    android:text="@string/description_label" />

                <EditText
                    android:id="@+id/player_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="@{bindingContext.inEdition}"
                    android:focusable="@{bindingContext.inEdition}"
                    android:focusableInTouchMode="@{bindingContext.inEdition}"
                    android:gravity="top"
                    android:inputType="textShortMessage"
                    android:maxLines="3"
                    android:padding="@dimen/small_padding"
                    android:scrollHorizontally="false"
                    android:text="@={player.description}" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>